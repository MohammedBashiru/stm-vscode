{
  "name": "stm-vscode",
  "displayName": "stm-vscode",
  "description": "syncline task manager vscode integration",
  "keywords": [
    "syncline",
    "stm",
    "task manager"
  ],
  "publisher": "Mohammed Bashiru",
  "version": "0.0.1",
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#c5ddff",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.stm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.stm",
        "title": "Syncline Task Manager"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stm-drawer",
          "title": "STM Task Manager",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "stm-drawer": [
        {
          "id": "stm.views.authSettings",
          "name": "Configure Auth",
          "when": "stm:authExplorerEnabled && config.stm.auth.enabled"
        },
        {
          "id": "stm.views.addTaskTreeView",
          "name": "Add Task",
          "when": "stm:addExplorerEnabled && config.stm.add.enabled"
        }
      ]
    },
    "menus": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2"
  }
}
